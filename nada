            <button onclick="answer('C')">Crescimento profissional</button>
        </div>

        <div id="question11" class="question" style="display: none;">
            <h2>Prefere um trabalho:</h2>
            <button onclick="answer('A')">Que exija atualização constante</button>
            <button onclick="answer('B')">Mais estável</button>
            <button onclick="answer('C')">Que envolva um equilíbrio entre ambos</button>
        </div>

        <!-- Resultado Final -->
        <div id="result" class="result"></div>
    </div>

    <script>
        let currentQuestion = 1;
        let answers = {A: 0, B: 0, C: 0};

        function answer(option) {
            answers[option]++;
            document.getElementById('question' + currentQuestion).style.display = 'none';
            currentQuestion++;
            const nextQuestion = document.getElementById('question' + currentQuestion);
            if (nextQuestion) {
                nextQuestion.style.display = 'block';
            } else {
                showResult();
            }
        }

        function showResult() {
            const resultDiv = document.getElementById('result');
            resultDiv.style.display = 'block';
            let resultText = '';
            if (answers.A > answers.B && answers.A > answers.C) {
                resultText = 'Você tem mais perfil para Radiologia!';
            } else if (answers.B > answers.A && answers.B > answers.C) {
                resultText = 'Você tem mais perfil para Gerontologia!';
            } else if (answers.C > answers.A && answers.C > answers.B) {
                resultText = 'Você tem mais perfil para Nutrologia!';
            } else {
                resultText = 'Você tem perfil para mais de uma área. Considere explorar ambas!';
            }
            resultDiv.textContent = resultText;
        }
    </script>

